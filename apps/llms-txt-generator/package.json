{
  "name": "llms-txt-generator",
  "displayName": "llms.txt Generator",
  "description": "Generate llms.txt with local files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "llms-txt-generator",
          "title": "LLMS Generator",
          "icon": "$(file-code)"
        }
      ]
    },
    "views": {
      "llms-txt-generator": [
        {
          "id": "llms-txt-generator.fileView",
          "name": "File Selection",
          "icon": "$(file-code)"
        }
      ]
    },
    "commands": [
      {
        "command": "llms-txt-generator.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "llms-txt-generator.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "llms-txt-generator.generate",
        "title": "Generate llms.txt",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "llms-txt-generator.selectByGlob",
        "title": "Select by Glob",
        "icon": "$(filter)"
      },
      {
        "command": "llms-txt-generator.checkAll",
        "title": "Select All",
        "icon": "$(check-all)"
      },
      {
        "command": "llms-txt-generator.uncheckAll",
        "title": "Unselect All",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "llms-txt-generator.refresh",
          "when": "view == llms-txt-generator.fileView",
          "group": "navigation"
        },
        {
          "command": "llms-txt-generator.checkAll",
          "when": "view == llms-txt-generator.fileView",
          "group": "navigation"
        },
        {
          "command": "llms-txt-generator.uncheckAll",
          "when": "view == llms-txt-generator.fileView",
          "group": "navigation"
        },
        {
          "command": "llms-txt-generator.selectByGlob",
          "when": "view == llms-txt-generator.fileView",
          "group": "navigation"
        },
        {
          "command": "llms-txt-generator.generate",
          "when": "view == llms-txt-generator.fileView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "ignore": "^7.0.5",
    "minimatch": "^10.1.1"
  }
}
